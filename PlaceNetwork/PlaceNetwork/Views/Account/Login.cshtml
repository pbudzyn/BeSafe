@model PlaceNetwork.Models.UserLoginModel
@{
    ViewBag.Title = "Log In";
}

<div class="row">
    <div class="col-xs-1 col-sm-3 col-md-3 col-lg-3"></div>
    <div class="col-xs-10 col-sm-6 col-md-6 col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">Log in</div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true, "Login failed. Check your login details.")

                    <div>@Html.LabelFor(u => u.Login)</div>
                    <div>@Html.TextBoxFor(u => u.Login, new { @class = "form-control" })</div>

                    <div>@Html.LabelFor(u => u.Password)</div>
                    <div>@Html.PasswordFor(u => u.Password, new { @class = "form-control" })</div>

                    <br />
                    <button type="submit" class="btn btn-default">Enter</button>
                    <a class="btn btn-default" href="/account/register">Register</a>
                }
            </div>
        </div>
    </div>
</div>
