<!DOCTYPE html>
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

<!-- Optional theme -->
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">

<!-- Latest compiled and minified JavaScript -->
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Place Network</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	<script src="http://underscorejs.org/underscore.js"></script>
</head>
<body>

	<div class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			@{
				if (HttpContext.Current.User.Identity.IsAuthenticated)
				{
					<div class="navbar-header">
						@Html.ActionLink("Place Network", "Index", "Home", null, new { @class = "navbar-brand" })
						<button class=" navbar-btn navbar-left btn btn-primary" data-toggle="modal" data-target="#addFriendModal" style="margin: 3px; margin-top: 8px; margin-left: 600px">
							Add friend
						</button>
						<button class="navbar-btn navbar-left btn btn-primary" data-toggle="modal" data-target="#friendListModal" onclick="loadFriendList()" style="margin: 3px; margin-top: 8px;">Friendlist</button>
					</div>
				}
			}
			@Html.Partial("_LoginSystem")
		</div>
	</div>
	<div class="container body-content">
		<br />
		@RenderBody()
		<hr />
		<footer>
			<p>@DateTime.Now.Year - GJ Team</p>
		</footer>
	</div>

@RenderSection("scripts", required: false)
</body>
</html>

<script>
	function loadFriendList() {
		var friendList = ['vasa', 'peter', 'pavlo'];
		for (var i = 0; i < 2; i++) {
			addRow(friendList[i]);
		}
	}

	function addRow(friendName) {
		$('#friendList').append('<tr>' +
			'<td>' +
				'<span class="glyphicon glyphicon-file"></span>' + friendName +
			'</td>' +
			'<td class="text-right text-nowrap">' +
				'<button class="btn btn-xs btn-info">Send message</button>' +
				'<button class="btn btn-xs btn-warning">' +
					'<span class="glyphicon glyphicon-trash"></span>' +
				'</button>' +
			'</td>' +
		'</tr>');
	}
</script>